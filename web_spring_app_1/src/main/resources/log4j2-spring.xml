<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO" name="web_spring_app_log_config" packages="">
    <Appenders>
        <File name="web_spring_app_toFileLog" fileName="logs/web_spring_app.log">
            <PatternLayout>
                <Pattern>[MY_LOG_web-app:] %d{yyyy-MM-dd HH:mm:ss} %p %c{1.} [%t] %m%n</Pattern>
            </PatternLayout>
        </File>
        <Console name="web_spring_app_toConsoleLog" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} %p %c{1.} [%t] %m%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <Root level="INFO">
            <AppenderRef ref="web_spring_app_toFileLog"/>
            <AppenderRef ref="web_spring_app_toConsoleLog"/>
        </Root>
    </Loggers>
</Configuration>