<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO" name="security_service_log_config" packages="">
    <Appenders>
        <File name="security_service_toFileLog" fileName="logs/security_service.log">
            <PatternLayout>
                <Pattern>[MY_LOG_scrty-srvc:] %d{yyyy-MM-dd HH:mm:ss} %p %c{1.} [%t] %m%n</Pattern>
            </PatternLayout>
        </File>
        <Console name="security_service_toConsoleLog" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} %p %c{1.} [%t] %m%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <Root level="INFO">
            <AppenderRef ref="security_service_toFileLog"/>
            <AppenderRef ref="security_service_toConsoleLog"/>
        </Root>
    </Loggers>
</Configuration>